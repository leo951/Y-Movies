<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_100"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.poster.PosterSerieActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:onClick="listSerie"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="◀︎"
                android:textSize="40dp"
                android:textColor="@color/teal_200"/>
            <TextView
                android:onClick="addFavoriSerie"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="match_parent"
                android:text="Favorite"
                android:textSize="20dp"
                android:textColor="@color/purple_200"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:padding="10dp"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/imageSerie"
            android:layout_width="245dp"
            android:layout_height="343dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            tools:src="@drawable/template" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/noteSerie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/teal_200"
                android:textSize="13dp"
                android:padding="10dp"
                tools:text="Recommended 85‰" />

            <TextView
                android:id="@+id/dateSerie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/purple_200"
                android:textSize="13dp"
                tools:text="2019" />

            <TextView
                android:id="@+id/countrySerie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="13dp"
                tools:text="France" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/nbSeason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textStyle="bold"
                tools:text="4 Seasons" />

            <TextView
                android:id="@+id/nbEpisode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textStyle="bold"
                tools:text="69 Episodes" />
        </LinearLayout>

        <TextView
            android:id="@+id/nameSerie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="20dp"
            tools:text="Crime" />

        <TextView
            android:id="@+id/descSerie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:justificationMode="inter_word"
            android:textColor="@color/white"
            android:textSize="13dp"
            tools:text="Description" />

        <TextView
            android:id="@+id/statusSimilar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            tools:text="Similar movies :"
            android:textColor="@color/purple_200"
            android:textSize="17dp" />

        <ListView
            android:id="@+id/similarList"
            android:layout_width="match_parent"
            android:layout_height="4500dp" />

    </LinearLayout>
</ScrollView>